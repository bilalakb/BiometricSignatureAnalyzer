<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:background="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FFFFFF">

        <!-- Card for Signature Image -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:backgroundTint="#FFFFFF">

            <ImageView
                android:id="@+id/imageViewSignature"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitCenter"
                android:src="@drawable/placeholder_image"
                android:contentDescription="@string/signature_image"
                android:background="#EEEEEE"
                android:padding="8dp" />
        </androidx.cardview.widget.CardView>

        <!-- İmza Detayları -->
        <TextView
            android:id="@+id/textViewId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID: "
            android:textSize="16sp"
            android:textColor="#3F51B5"
            android:layout_marginBottom="8dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/touchDurationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dokunma Süresi: 0 ms"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/textViewPathLength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Path Length: "
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/textViewAvgVelocity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Avg Velocity: "
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/textViewAcceleration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Acceleration: "
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/textViewcurveCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Curve Count: "
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/textViewhorizontalMovements"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Horizontal Movements: "
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/textverticalMovements"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vertical Movements: "
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/textViewcentroidX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/textViewcentroidY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_marginBottom="4dp" />

        <!-- Koordinatlar ve Zaman Damgaları için yatay düzen -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/textCoordinates"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Koordinatlar: "
                android:textSize="14sp"
                android:textColor="#757575" />

            <TextView
                android:id="@+id/textTimestamps"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Zaman Damgaları: "
                android:textSize="14sp"
                android:textColor="#757575" />
        </LinearLayout>

        <!-- Sil Butonu -->
        <Button
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sil"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#E57373"
            android:layout_marginTop="16dp"
            android:layout_gravity="end" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
